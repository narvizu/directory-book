<!doctype html>
<html>
    <head>
        <title><%= pageTitle %></title>
        <meta name="description" content="<%= pageTitle %>">
        <link rel="stylesheet" href="/css/main.css">
    </head>
    <body>
        <header>
            <h1><a href="/">Book Directory</a></h1>
        </header>
        <main>
            <% if (books.length > 0) { %>
                <div class="grid">
                    <% for (let b of books) { %>
                        
                            <div class="card book-item">
                                <h2 class="b__title"><%= b.title %></h1>  
                                <input type="hidden" value="<%= b.id %>" name="bookId">
                                <div class="b__content">
                                    <p class="b__description"><%= b.description %></p>
                                </div>
                                <div class="b__actions">
                                    <a href="/book-details/<%= b.id %>" class="btn">Details</a>
                                </div>
                            </div>
                        
                    <% } %>
                </div>
            <% } else { %>
                <h2>No Books Found!</h2>
            <% } %>
            <div class="d_separator">
                <form class="form-vert" action="/add-book" method="POST"> 
                    <label> 
                        Title:
                        <input type="text" name="title" />
                      </label>
                      <label> 
                        Description:
                        <!--input type="textarea" name="description" /-->
                        <textarea name="description" rows="5"></textarea>
                      </label>
                      <label> 
                        Ranking:
                        <input type="number" name="ranking"  min="1" max="5"/>
                      </label>
                    <button class="s_button" type="submit">Add Book</button>
                </form>
            </div>
        </main>
    </body>
</html>